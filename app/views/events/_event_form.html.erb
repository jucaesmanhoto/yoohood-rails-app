<div class="container">
  <div class="row justify_content-center">
    <div class="col-sm-12 col-md-6">
      <%= simple_form_for @event do |f| %>
        <%= f.input :event_name %>
        <%= f.input :start_time %>
        <%= f.input :end_time %>
        <%= f.input :cover %>
        <%= f.association :place %>
        <%= f.submit class: "btn btn-outline-primary float-rigth" %>
      <% end %>
    </div>
  </div>
</div>
